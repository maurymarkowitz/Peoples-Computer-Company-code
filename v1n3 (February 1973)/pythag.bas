100 PRINT "PYTHAGOREAN SCALE"
110 DIM F[7]
120 REM STARTING WITH 2/3, MULTIPLY SUCCESSIVELY BY 3/2
130 LET F[1]=2/3
140 FOR I=2 TO 7
150 LET F[I]=F[I-1]*3/2
160 NEXT I
170 REM CONVERT TO NUMBERS BETWEEN 1 AND 2
180 FOR I=1 TO 7
190 IF F[I] >= 1 THEN 210
200 LET F[I]-2*F[I]
210 IF F[I] < = 2 THEN 240
220 LET F[I]=F[I]/2
230 GOTO 210
240 NEXT I
250 REM SORT LOWEST TO HIGHEST
260 FOR I=1 TO 6
270 FOR J=1 TO I
280 IF F[J] <= F{J+1] THEN 320
290 LET X=F[J]
300 LET F[J]=F[J+1]
310 LET F[J+1]=X
320 NEXT J
330 NEXT I
340 REM PRINT THE SCALE
350 FOR I=1 TO 7
360 PRINT F[I]
370 NEXT I
380 PRINT
390 END